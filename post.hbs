{{!< default}}

{{#post}}
<section class="{{post_class}}">
    <header class="metadata">
        <b>Published:</b> {{date format="DD MMMM YYYY"}}<br />
        {{#if tags}}<b>Posted In:</b> {{tags}}{{/if}}
    </header>
    <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
    </header>
    <section class="post-content">
        {{content}}
    </section>
</section>
{{/post}}
